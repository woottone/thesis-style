<html>
  <head>
      <link rel="stylesheet" type="text/css" href="public/css/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
    <script>
      const socket = io();

      socket.on('reload', () => {
        window.location.reload();
      });
    </script>
  </head>
  <!-- I coded all of the HTML/CSS, anywhere that has javascript was done by the developer -->
  <body style="background-image: url(static/mobile-results-background.jpg); background-position: left top; background-size: cover;">
      <div class="mobile-results-container mobile-container">
        <button data-event="newDecision" class="mobile-results-next mobile-nav-button button">Next</button>
          <!-- <button id="adjudicate" class="adjudicate-button button body-text">Adjudicate</button> -->
      </div>
  </body>
  <script>

    document.querySelectorAll('button').forEach(button => {
        const eventName = button.dataset.event;
        button.addEventListener('click', () => {
          socket.emit(eventName);
        });
      });

  </script>
</html>
