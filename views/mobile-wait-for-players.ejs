<html>
  <head>
    <link rel="stylesheet" type="text/css" href="public/css/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
    <script>
      const socket = io();

      socket.on('reload', () => {
        window.location.reload();
      });
    </script>
  </head>
  <body>
    <!-- I coded all of the HTML/CSS, anywhere that has javascript was done by the developer -->
    <div class="new-player-container mobile-container">
        <div class="logo-background"></div>
        <h1 class="mobile-waiting">Waiting for other players...</h1>
      <button id="start" class="name-submit button body-text">Start</button>
    </div>
    <script>
      const button = document.getElementById('start');
      button.addEventListener('click', () => {
        socket.emit('start');
      });
    </script>
  </body>
</html>
